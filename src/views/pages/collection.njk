{% extends "layouts/main.njk" %}
{% from "macros/tags.njk" import tags %}

{% block title %}
  {{ title | striptags }}
  - {{ super() }}
{% endblock %}

{% block content %}
  <h2
    class="c-page__title"
    property="name"
    id="skip-to-content-link-target"
    tabindex="-1"
  >
    {{ title | safe }}
  </h2>

  {% if entries %}
    <div class="c-tile__grid-container">
      {% for entry in entries %}
        <div
          class="c-tile"
          {% if entry.thumbnailUrl %}
            style="background-image: url('{{ entry.thumbnailUrl }}')"
          {% endif %}
        >
          <div class="c-tile__contents">
            <a class="c-tile__cover-link" href="/novel/{{ entry.identifier }}">
              <strong>{{ entry.name }}</strong>
            </a>
            {% if entry.author %}
              <br />
              by
              {% for author in entry.author %}
                {{ (author.identifier | lookup).name }}

                {{- ", " if not loop.last }}
              {% endfor %}
            {% endif %}
            <br />
            {{ tags(entry.keywords) }}
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No results found.</p>
  {% endif %}
{% endblock %}
